<h1>Login</h1>

<% if @form_error %>
  <div><%= @form_error %></div>
<% end %>

<form class="col s12" action="/login" method="post">
  <div class="input-field col s6 centered">
    <input name="username" type="text" class="validate" value="<%= @username %>">
    <label for="username">Username</label>
  </div>

  <div class="input-field col s6 centered">
    <input name="password" type="password" class="validate" value="">
    <label for="password">Password</label>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <input class="btn" type="submit" name="action" value="Login"/>
    </div>
  </div>
</form>
