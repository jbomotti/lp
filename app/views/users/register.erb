<form class="col s12" action="/register" method="post">

  <!-- <div class="row"> -->
    <% if @user.errors[:first_name].any? %>
      <div style="color: red;"><%= @user.errors[:first_name].first %></div>
    <% end %>
    <div class="input-field col s6">
      <input placeholder="First Name" name="first_name" type="text" class="validate" value="<%= @user.first_name %>">
      <label for="first_name"></label>
    </div>
  <!-- </div> -->

  <!-- <div class="row"> -->
    <% if @user.errors[:last_name].any? %>
      <div style="color: red;"><%= @user.errors[:last_name].first %></div>
    <% end %>
    <div class="input-field col s6">
      <input placeholder="Last Name" name="last_name" type="text" class="validate" value="<%= @user.last_name %>">
      <label for="last_name"></label>
    </div>
  <!-- </div> -->

  <!-- <div class="row"> -->
    <% if @user.errors[:username].any? %>
      <div style="color: red;"><%= @user.errors[:username].first %></div>
    <% end %>
    <div class="input-field col s12">
      <input placeholder="Username" name="username" type="text" class="validate" value="<%= @user.username %>">
      <label for="username"></label>
    </div>
  <!-- </div> -->

  <!-- <div class="row"> -->
    <% if @user.errors[:password].any? %>
      <div style="color: red;"><%= @user.errors[:password].first %></div>
    <% end %>
    <div class="input-field col s6">
      <input placeholder="Password" name="password" type="password" class="validate" value="">
      <label for="password"></label>
    </div>
  <!-- </div> -->

  <!-- <div class="row"> -->
    <% if @user.errors[:password_confirmation].any? %>
      <div style="color: red;"><%= @user.errors[:password_confirmation].first %></div>
    <% end %>
    <div class="input-field col s6">
      <input placeholder="Confirmation" name="password_confirmation" type="password" class="validate" value="">
      <label for="password_confirmation"></label>
    </div>
  <!-- </div> -->

  <div class="row">
    <input class="btn" type="submit" name="action" value="Register"/>
    <a class="btn" href="/">Cancel<a/>
  </div>

</form>
