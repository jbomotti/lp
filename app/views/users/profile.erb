<h1>Profile</h1>
<div>Welcome, <%= @user.fullname %></div>
<div>
  <% unless @languages.empty? %>
    <h4>Your Languages</h4>
    <div class="collection">
      <% @languages.each do |language| %>
        <a href="/languages/<%= language.id %>" class="collection-item"> <%= language.name %> </a>
      <% end %>
    </div>
  <% end %>
  <form class="col s12" action="/edit" method="get">
    <div class="row">
      <div class="input-field col s12">
        <input class="btn" type="submit" name="action" value="Edit Profile"/>
      </div>
    </div>
  </form>
</div>
