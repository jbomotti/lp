<h1>All Languages</h1>

<% if auth_logged_in? %>
  <div class="row">
    <a class="btn" href="/languages/new">Add a Language<a/>
  </div>
<% end %>

<% @languages.each do |language| %>
  <div class="col s6 m3">
    <div class="card small">
      <div class="card-image lang-image">
       <!-- <img src="/images/pizza.jpg" alt="" class="circle"> -->
       <h1 class="circle lang-code"><%= language.code %></h1>
        <!-- <span class="card-title"><%= language.name %></span> -->
      </div>
      <div class="card-content lang-name">
        <h4><%= language.name %></h4>
        <p class="learner-count">Current Learners: <%= language.language_learners.count %></p>
      </div>
      <div class="card-action">
        <a href="/languages/<%= language.id %>">Details</a>
      </div>
    </div>
  </div>
<% end %>
